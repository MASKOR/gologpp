action arith_action(number x, number y) {
effect:
    add(x, y) = x + y;
    sub(x, y) = x - y;
    mult(x, y) = x * y;
    if (y != 0)
        div(x, y) = x / y;
    pow(x, y) = x ** y;
    mod(x, y) = x % y;
}


