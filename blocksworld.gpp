%fluent on(%x) {
initially:
	(1) = 0;
	(2) = 0;
	(3) = 0;
}

action stack(%x, %y) {
precondition:
	on(%x) != %y
	& %x != 0
	& !(exists (%z) (
		on(%z) == %x |
		on(%z) == %y
	))

effect:
	on(%x) = %y;
}


?function goal() {
	return on(1) == 0 & on(2) == 1 & on(3) == 2;
}

%function reward() {
	if (goal())
		return 100;
	else
		return 0;
}


{
	solve(15, reward())
		while (!goal())
			pick(%x in {1, 2, 3})
				pick(%y in {0, 1, 2, 3})
					stack(%x, %y);
}
